<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_armadura_form" model="ir.ui.view">
        <field name="name">Vista formulario de armadura</field>
        <field name="model">armadura</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <div class="o_row" style="display: flex; flex-direction: row;">
                            <h2 style="margin-right: 20px">
                            <field name="priority" widget="priority"/>
                            </h2>
                            <h1>
                                <field name="name" placeholder="Nombre del medicamento" required="1" default_focus="1"/>
                            </h1>
                        </div>
                        <group string="Datos principales" style="margin-top: -10px">
                            <group>
                                <field name="descripcion"/>
                                <field name="defensa"/>
                                <field name="precio" widget="monetary" options="{'currency_field':'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="imagen" widget="image"/>
                            </group>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_armadura_kanban" model="ir.ui.view">
        <field name="name">Vista de kanban armadura</field>
        <field name="model">armadura</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="display: flex; flex-direction: row;">
                            <div class="o_kanban_image">
                                <field name="imagen" widget="image" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="defensa"/>
                                </div>
                                <div>
                                    <field name="precio" widget="monetary" options="{'currency_field': 'currency_id', 'field:digits': True}"/>
                                </div>
                            </div>
                            <div>
                                <field name="priority" widget="priority"/>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_armadura_tree" model="ir.ui.view">
        <field name="name">Vista de lista de armaduras</field>
        <field name="model">armadura</field>
        <field name="arch" type="xml">
            <tree>
                <field name="imagen" widget="image" options="{'size':[50,50]}" optional="show"/>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="defensa"/>
                <field name="precio" widget="monetary" options="{'currency_field':'currency_id'}"/>
                <field name="currency_id" invisible="1"/>
                <field name="priority" widget="priority"/>
            </tree>
        </field>
    </record>
</odoo>