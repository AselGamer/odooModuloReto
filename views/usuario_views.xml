<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_usuario_form" model="ir.ui.view">
        <field name="name">Vista formulario de usuario</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="login"/>

                            </group>
                        </group>


                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_usuario_tree" model="ir.ui.view">
        <field name="name">Vista de lista de usuarios</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="login"/>
                <field name="x_dinero"/>
                <field name="sel_groups_71_72"/>

            </tree>
        </field>
    </record>

</odoo>
