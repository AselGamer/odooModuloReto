<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_usuario_form" model="ir.ui.view">
        <field name="name">Vista formulario de usuario</field>
        <field name="model">usuario</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">

                        <group>
                            <field name="name"/>
                            <field name="apellido"/>
                            <field name="email"/>
                            <field name="dinero" widget="monetary" options="{'currency_field':'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>

                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_usuario_tree" model="ir.ui.view">
        <field name="name">Vista de lista de usuarios</field>
        <field name="model">usuario</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="apellido"/>
                <field name="email"/>
                <field name="dinero" widget="monetary" options="{'currency_field':'currency_id'}"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>
